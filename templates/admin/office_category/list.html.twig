{% extends 'base.html.twig' %}

{% block page_title 'Office categories' %}

{% block content %}
    <div class="actions">
        <a href="{{ path('admin_office_category_add') }}" class="btn btn-primary">Add category</a>
    </div>

    {% if categories is not empty %}
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Name</th>
                <th># Offices</th>
                <th class="actions"></th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.code }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.offices|length }}</td>
                    <td class="actions">
                        <a href="{{ path('admin_office_category_edit', {id: category.id}) }}" class="btn btn-primary">Edit</a>
                        {{ delete_form(path('admin_office_category_delete', { id: category.id })) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="total">{{ categories|length }} categories</div>
    {% else %}
        <p>No categories</p>
    {% endif %}
{% endblock %}
